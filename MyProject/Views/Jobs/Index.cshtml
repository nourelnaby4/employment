@model IEnumerable<MyProject.Models.Job>

@{
    ViewBag.Title = "وظائف";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>وظائف</h2>

<p>
    @Html.ActionLink("ادخل وظيفة جديدة", "Create")
</p>
<table class="table table-striped table-bordered table-hover ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobImage)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobContent)
            </td>
            <td>
                <img src="~/Uploads/@Html.DisplayFor(modelItem => item.JobImage)" class="thumbnail"
                     style="width:48px;height:48px;" />
            </td>
            <td>
                @Html.ActionLink("تعديل", "Edit", new { id = item.Id }) |
                @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
