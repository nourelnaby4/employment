@using Microsoft.AspNet.Identity

@*partial view layout*@
@*لقد قمنا بتضمين هذة الصفحة في ملف الشيرد لكي تظهر في جميع صفحات الموقع"video 9"*@
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Logoff", "Account", FormMethod.Post, new { id = "logoff" }))
    {
        <!--لابد من استدعاء هذه الدالة لحماية الصفحة بتاعتب من الهاكرز-->
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            <li>
                <!--عندما يضغط علي الينك يذهب بيه الي الميثود اللي اسمها اندكس في الكنترولر مانج-->
                @Html.ActionLink(" مرحبا بك " + User.Identity.GetUserName(), "Index", "Manage")
            </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="javascript:document.getElementById('logoff').submit()">
                    تسجيل الخروج
                </a>
            </li>
        </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li>
        <a href="~/Account/Login">
            <i class="glyphicon glyphicon-user"></i>
                تسجيل الدخول
        </a>
    </li>
</ul>
<ul class="nav navbar-nav navbar-right" style=" margin-left: 1.5em">
    <li>
        <a href="~/Account/Register">
            <i class="glyphicon glyphicon-lock"></i>
            اشتراك
        </a>
    </li>
</ul>
}
